<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Shape with White Fill -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="22dp" />
            <solid android:color="#FFFEFD" />
        </shape>
    </item>

    <!-- Dashed Border with Padding -->
    <item android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp">
        <shape android:shape="rectangle">
            <corners android:radius="22dp" />
            <stroke android:width="2dp" android:color="#CCCCCC" android:dashWidth="10dp" android:dashGap="10dp" />
        </shape>
    </item>
</layer-list>



